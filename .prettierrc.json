{
  "printWidth": 180,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "always",
  "proseWrap": "never",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "overrides": [
    {
      "files": ["*.yml.j2", "*.yaml.j2"],
      "options": {
        "parser": "yaml"
      }
    }
  ]
}
