{
  "name": "@cenk1cenk2/ansible-roles",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:cenk1cenk2/ansible-roles.git",
  "author": "Cenk Kılıç <cenk@kilic.dev>",
  "license": "MIT",
  "private": true,
  "root": true,
  "type": "module",
  "scripts": {
    "format": "prettier . --loglevel warn --write",
    "format:check": "prettier --check . --loglevel warn",
    "lint": "yarn run lint:check --write && yarn run format",
    "lint:check": "ansible-lint -v"
  },
  "lint-staged": {
    "*.{yml,yml.j2,json}": [
      "prettier --loglevel warn --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "yarn exec lint-staged",
    "pre-push": "yarn run lint:check && yarn run format:check"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.5.9",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "simple-git-hooks": "^2.8.1"
  }
}
