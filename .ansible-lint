# vim:ft=yaml
---
profile: production

offline: true

exclude_paths:
  - roles/
  - collections/
  - "**/files/**/*"

use_default_rules: true

skip_list:
  - risky-file-permissions
  - command-instead-of-shell
  - ignore-errors
  - no-changed-when
  - line-length
  - package-latest
  - comments
  - yaml[line-length]
  - schema[vars]
  - name[casing]
  - name[template]
  - name[play]
  - name[missing]
  - galaxy[no-runtime]
  - jinjaspacing

enable_list:
  - command-shell
  - core
  - deprecations
  - experimental
  - formatting
  - idempotency
  - idiom
  - metadata
  - jinja
  - partial-become
  - opt-in
  - security
  - syntax-check
  - unpredictability
  - unskippable
  - yaml

kinds:
  - tasks: "**/tasks/*.yml"
  - vars: "**/vars/**/*.yml"
